<%= form_for(@task) do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :details %></p>
  <p><%= f.text_field :details %></p>
  <p><%= f.check_box :completed, checked: @task.completed %>
  <%= f.label :completed %></p>
  <p><%= f.submit %></p>
<% end %>
<%=link_to "back to list", "/tasks"%>
